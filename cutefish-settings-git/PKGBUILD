# Maintainer: noone <>
pkgname=cutefish-settings-git
pkgver=r176.c93025f
pkgrel=1
pkgdesc="Cutefish Settings"
arch=('x86_64')
url="https://github.com/adi-g15/settings.git"
license=('GPL3')
groups=('cutefish-git')
depends=('qt5-declarative' 'freetype2')
makedepends=('git' 'cmake' 'extra-cmake-modules' 'gcc' 'ninja' 'extra-cmake-modules' 'qt5-base' 'qt5-quickcontrols2' 'fontconfig' 'networkmanager-qt' 'modemmanager-qt')
provides=("${pkgname%-git}")
conflicts=("${pkgname%-git}")
source=("${pkgname%-git}::git+${url}"
	'remove_translation_settings.patch')
md5sums=('SKIP'
	'fc643b8d6f89a0b5d3c5c71245269fbe')

prepare() {
        cd "$srcdir/${pkgname%-git}"

        # Apply patches
        git apply "$srcdir"/*.patch
}

pkgver() {
        cd "$srcdir/${pkgname%-git}"

	printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

build() {
	cd "$srcdir/${pkgname%-git}"
        mkdir -p build && cd build
        rm -f CMakeCache.txt
	cmake \
		-G Ninja \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_BUILD_TYPE=Release \
		..
	cmake --build .
}

package() {
	cd "$srcdir/${pkgname%-git}"
        cd build
	DESTDIR="$pkgdir/" cmake --install .
}

